# GP8413 Home Assistant Service Configuration
# Copy this file to /etc/gp8413/config and update with your values

# MQTT Broker Settings
MQTT_HOST=localhost
MQTT_PORT=1883
MQTT_USERNAME=your_mqtt_username
MQTT_PASSWORD=your_mqtt_password
MQTT_TOPIC=homeassistant/light/gp8413

# Device Settings
DEVICE_NAME=GP8413 Light
UNIQUE_ID=gp8413_light

# DAC Settings
VOLTAGE_RANGE=0-10V
SDA_PIN=2
SCL_PIN=3
I2C_ADDRESS=0x58
FADE_DURATION=0.5

